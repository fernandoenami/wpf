<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:WpfApplication2.ViewModel" x:Class="WpfApplication2.View.BookView"
        Title="BookView" Height="300" Width="400">
    <Window.DataContext>
        <ViewModel:BookViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid HorizontalAlignment="Left" ItemsSource="{Binding Path=Book}" Width="400" Height="300" VerticalAlignment="Top">
        </DataGrid>
    </Grid>
</Window>
